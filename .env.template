# Azure Deployment Configuration
# Copy this to .env.local and fill in your values

# Required: Your Azure subscription ID  
AZURE_SUBSCRIPTION_ID=

# Required: Resource group name (will be created if doesn't exist)
RESOURCE_GROUP_NAME=videoshare-rg

# Required: Azure region for all resources
AZURE_REGION=eastus

# Required: Unique suffix for naming (use your initials + random number)
UNIQUE_SUFFIX=

# Storage account settings
STORAGE_ACCOUNT_NAME=videoshare${UNIQUE_SUFFIX}
STORAGE_CONTAINER_NAME=videos

# App service settings
APP_SERVICE_PLAN_NAME=videoshare-plan
API_APP_NAME=videoshare-api-${UNIQUE_SUFFIX}
API_SKU=B1

# Static web app settings  
STATIC_WEB_APP_NAME=videoshare-frontend-${UNIQUE_SUFFIX}

# Optional: Custom domain (leave empty for default)
CUSTOM_DOMAIN=